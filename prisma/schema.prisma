generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// DEFINICIJA TIPOVA
enum Role {
  USER
  ADMIN
  GUEST
}

enum TransactionType {
  INCOME
  EXPENSE
}

// KORISNIK
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String?
  role      Role       @default(USER)
  createdAt DateTime   @default(now())

  // Relacije
  expenses   Expense[]
  incomes    Income[]
  categories Category[]
}

// KATEGORIJA (Sada vezana za korisnika)
model Category {
  id        Int             @id @default(autoincrement())
  name      String
  type      TransactionType
  
  // Ako je userId NULL, kategorija je "sistemska" (svi je vide)
  // Ako ima ID, vidi je samo taj korisnik
  userId    Int?
  user      User?           @relation(fields: [userId], references: [id])

  expenses  Expense[]
  incomes   Income[]
}

// TROÅ AK
model Expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  createdAt   DateTime @default(now())

  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

// PRIHOD
model Income {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  createdAt   DateTime @default(now())

  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}